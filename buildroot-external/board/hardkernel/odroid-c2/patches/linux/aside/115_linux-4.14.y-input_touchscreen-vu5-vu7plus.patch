+static int sx865x_remove(struct i2c_client *client)
+{
+	struct sx865x *ts = i2c_get_clientdata(client);
+	struct sx865x_platform_data *pdata;
+
+	pdata = client->dev.platform_data;
+
+	if (ts->gpio_pendown)
+		gpio_free(ts->gpio_pendown);
+	if (ts->gpio_reset)
